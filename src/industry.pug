extends pug/base

prepend vars
	//-

append vars
	-
		title = "Индустрия"
		meta.description = "Описание"
		link.icon = "favicons/favicon.ico"
		link.icon16x16 = "favicons/favicon-16x16.png"
		link.icon32x32 = "favicons/favicon-32x32.png"

block content
	// Section Hero
	section.section-hero
		.container
			+breadcrumb(['Главная'], 'Индустрии')(class="section-hero__breadcrumb breadcrumb--white")
			h1.section-hero__title
				span.text-weight-light Индустрия
				|
				| Fashion
			p.section-hero__text Наши решения адаптированы для индустрии Beauty&Luxury. Безопасность, устойчивость
				br
				| и гибкость при работе c маршрутами выхода на рынок — наши главные приоритеты, способствующие изменениям в цепочке поставок.
			img.section-hero__bg(src="images/section-hero/bg1.jpg", alt)
	// Results
	.results.container
		.results__row
			// Col
			.results__col
				p.results__value 5 млн
				p.results__text Выгрузка (коробов) / год
			// Col
			.results__col
				p.results__value 100 млн
				p.results__text Приемка (штук) / год
			// Col
			.results__col
				p.results__value 400 тыс
				p.results__text Восстановление качества
					br
					|(штук) / год
			// Col
			.results__col
				p.results__value 15 млн
				p.results__text Стикеров (штук) / год
		a.button.button--blue.button--md.results__button Связаться с нами
	// Section Advantages
	section.section-advantages.container
		h2.h2.text-blue.section-advantages__title
			span.text-blue-light Учитываем
			|
			|
			span.text-red все
			|
			| особенности
			br
			| индустрии Fashion
		.section-advantages__grid
			// Card
			a.section-advantages__card(href="#")
				.section-advantages__card-title-box
					+svg("chevron-right")(class="section-advantages__card-arrow")
					h3.section-advantages__card-title Ярко выраженная сезонность
				p.section-advantages__card-text Собственная система управления складом (WMS) с расширенными возможностями по учету дополнительных параметров товара (более 30 признаков).
			// Card
			a.section-advantages__card(href="#")
				.section-advantages__card-title-box
					+svg("chevron-right")(class="section-advantages__card-arrow")
					h3.section-advantages__card-title Обширный справочник
				p.section-advantages__card-text Собственная система управления складом (WMS) с расширенными возможностями по учету дополнительных параметров товара (более 30 признаков).
			// Card
			a.section-advantages__card(href="#")
				.section-advantages__card-title-box
					+svg("chevron-right")(class="section-advantages__card-arrow")
					h3.section-advantages__card-title Срок оказания услуг
				p.section-advantages__card-text Собственная система управления складом (WMS) с расширенными возможностями по учету дополнительных параметров товара (более 30 признаков).
			// Card
			a.section-advantages__card(href="#")
				.section-advantages__card-title-box
					+svg("chevron-right")(class="section-advantages__card-arrow")
					h3.section-advantages__card-title Предпродажная подготовка
				p.section-advantages__card-text Собственная система управления складом (WMS) с расширенными возможностями по учету дополнительных параметров товара (более 30 признаков).
			// Card
			a.section-advantages__card(href="#")
				.section-advantages__card-title-box
					+svg("chevron-right")(class="section-advantages__card-arrow")
					h3.section-advantages__card-title Таможенный склад
				p.section-advantages__card-text Собственная система управления складом (WMS) с расширенными возможностями по учету дополнительных параметров товара (более 30 признаков).
