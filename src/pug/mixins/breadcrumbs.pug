mixin breadcrumb(items, last)
	// Breadcrumbs
	.breadcrumb&attributes(attributes)
		ul.breadcrumb__list
			each item in items
				li.breadcrumb__item
					// if breadcrumb is single
					if (items.length === 0)
						span.breadcrumb__link= item
					else
						a(href="#" title=item).breadcrumb__link= item
						+svg("chevron-right")(class="breadcrumb__arrow")

